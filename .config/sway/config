#
# VARIABLES
#
set $mod Mod4
set $term terminator
set $lbin ~/.local/bin


#
# SETTINGS
#

font pango:monofur for powerline bold 12px
titlebar_padding 1 1
floating_modifier $mod

workspace_auto_back_and_forth no

mouse_warping output
workspace_layout default

default_border none
default_floating_border none

gaps inner 10
gaps outer 10
hide_edge_borders both
smart_gaps on

# Start bar to display a workspace bar
# bug: https://github.com/swaywm/sway/issues/5724
# So WAYBAR is a script that does the right thing.
bar {
    swaybar_command WAYBAR
}


#
# INPUT HARDWARE
#

# swaymsg -t get_inputs
input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout  eu,us,de
    xkb_model   pc105
    xkb_options compose:rctrl,srvkeys:none,caps:none

# xkb_options compose:rctrl
    # xkb_options altwin:swap_lalt_lwin,caps:swapescape
    # xkb_options custom:swap_win_caps
}

input "1267:12811:ELAN0688:00_04F3:320B_Touchpad" {
    dwt enabled
    tap enabled
}


