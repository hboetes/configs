set $mod Mod4
set $term terminator

font pango:inconsolata medium 14px

# Use Mouse+$mod to drag floating windows
floating_modifier $mod


# start a terminal
bindsym $mod+Return exec $term
bindsym $mod+semicolon exec tilix
bindsym $mod+Shift+b exec $term -e 'alsamixer -c 0'
bindsym $mod+b exec Emacs
bindsym $mod+Shift+m exec gnome-system-monitor

# kill focused window
bindsym $mod+Shift+Q kill

bindsym $mod+d exec $(grep -v '^#' ~/.config/i3/dmenu_progs | rofi -fake-transparency -dmenu)
bindsym $mod+c exec rofi -fake-transparency -show run
bindsym $mod+g exec rofi -fake-transparency -show ssh
bindsym $mod+m exec rofi -fake-transparency -show window

bindsym $mod+r exec pkill -USR1 redshift

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split v

# split in vertical orientation
bindsym $mod+v split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

bindsym $mod+l exec "lockmeup"
bindsym $mod+x exec "shhttt"
bindsym $mod+Prior  exec "volume +"
bindsym $mod+Next   exec "volume -"
bindcode 232  exec "backlight -"
bindcode 233  exec "backlight +"

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move workspace 1
bindsym $mod+Shift+2 move workspace 2
bindsym $mod+Shift+3 move workspace 3
bindsym $mod+Shift+4 move workspace 4
bindsym $mod+Shift+5 move workspace 5
bindsym $mod+Shift+6 move workspace 6
bindsym $mod+Shift+7 move workspace 7
bindsym $mod+Shift+8 move workspace 8
bindsym $mod+Shift+9 move workspace 9
bindsym $mod+Shift+0 move workspace 10

# reload The configuration file
bindsym $mod+Shift+C reload
bindsym $mod+Shift+R restart
bindsym $mod+Shift+E exec sway_exit

# bindsym $mod+shift+R mode "resize"
bindsym $mod+Shift+s sticky toggle


mode "resize" {
  bindsym Left   resize shrink width
  bindsym Right  resize grow   width
  bindsym Up     resize shrink height
  bindsym Down   resize grow   height

  bindsym Escape mode "default"
}

# Start waybar to display a workspace bar
bar {
        swaybar_command waybar
}

workspace_auto_back_and_forth no

# xprop|grep WM_CLASS → WM_CLASS(STRING) = "irssi", "URxvt"
# So always use the last word!
default_border none
for_window [instance="^Firefox$" instance="^Download$"] floating enable
for_window [title="^Firefox — Sharing Indicator$"] floating enable
for_window [app_id="^firefox$"] gaps inner current set 0; gaps outer current set 0
for_window [instance="feh"] floating enable
for_window [instance="^FLTK"] floating enable
for_window [instance="^zoom$"] floating enable
for_window [app_id="^com.github.wwmm.easyeffects$"] floating enable
for_window [instance="^Terminator Preferences$"] floating enable # no worky :-(
for_window [instance="^Toplevel$" instance="^variations$"] floating enable

assign [instance="^Puddletag$"] 3
assign [class="^Vncviewer$"] 8
for_window [class="^Vncviewer$"] gaps inner current set 0; gaps outer current set 0


# class                 border  backgr. text    indicator
client.focused          #99784c #775528 #999999 #f49e2e
client.focused_inactive #333333 #6a675f #ffffff #484e50
client.unfocused        #333333 #222222 #888888 #292d2e
client.urgent           #3a342f #900000 #ffffff #900000

mouse_warping output
workspace_layout default

# Enable border only when have more than one window
default_border pixel 0
default_floating_border pixel 0

gaps inner 5
gaps outer 5
hide_edge_borders both
bindsym $mod+a                  gaps inner current set 0; gaps outer current set 0
bindsym $mod+Shift+a            gaps inner current set 5; gaps outer current set 5

hide_edge_borders both

# swaymsg -t get_inputs
input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout  "us"
    xkb_model   "pc105"
    xkb_options "compose:rctrl,caps:none,srvkeys:none"
}

input "1739:52581:SYNA1202:00_06CB:CD65_Touchpad" {
    dwt enabled
    tap enabled
}

# swayshot
#
# Print screen helper for sway: add keyboard shortcuts for screenshots:
# * Print Scr for whole screen
# * Alt + Print Scr for a focused window
# * Shift + Print Scr for a selected region
#
# Save screenshots to $SWAYSHOT_SCREENSHOTS folder.
# The default value is XDG_PICTURES_DIR, see
# https://wiki.archlinux.org/index.php/XDG_user_directories

bindsym Print            exec swayshot
bindsym Mod1+Print       exec swayshot window
bindsym Shift+Print      exec swayshot region
bindsym $mod+Print       exec swayshot display upload
bindsym $mod+Mod1+Print  exec swayshot window  upload
bindsym $mod+Shift+Print exec swayshot region  upload

bindsym  $mod+question exec sway-prop

exec                     wl-paste    -t text --watch clipman store
exec                     wl-paste -p -t text --watch clipman store
bindsym $mod+y           exec clipman --primary pick --tool rofi
bindsym $mod+Shift+y     exec clipman clear -a
bindsym $mod+Mod1+y      exec clipman clear --tool rofi
bindsym $mod+Ctrl+y      exec : | wl-copy -p

bindsym $mod+p exec i3exit $(echo -e 'suspend\nsuslock\nlock\nlogout\nreboot\nshutdown' | rofi -dmenu)

exec swayidle -w \
        timeout 600 'lockmeup' \
        timeout 610 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"'

exec gnome-keyring-daemon --start --components=pkcs11,secrets
exec nm-applet --indicator
exec blueman-applet
exec redshift-gtk -m wayland -l 46.8471:15.520
exec mako -c ~/.config/sway/mako.conf
exec battery
exec wallpaper
