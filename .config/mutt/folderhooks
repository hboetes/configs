# In this folder all messages get deleted after inspection.
folder-hook (zspam|empty) \
        'set index_format="%Z %[%d %b %H:%M]  %-60.60s  %35.35F" ;\
        set sort=subject ;\
        ignore * ;\
        set pager_index_lines=8 ;\
        set weed=no'


folder-hook root \
        'set score ;\
        score ~A 10 ;\
        score ~R -5 ;\
        score ~f"root\@" -5 ;\
        score ~f"Cron" -5'

folder-hook github.com \
        'set score ;\
        score ~A 10 ;\
        score ~R -5 ;\
        score ~f"\@github.com" -5'

folder-hook difool \
        'set score ;\
        score ~A 10 ;\
        score ~R -5 ;\
        score ~f"\@github.com" -5'

folder-hook postmaster \
        set score ;\
        set score_threshold_delete=0


folder-hook xing \
        'set score ;\
        score ~A 10 ;\
        score ~R -5 ;\
        score ~f"xing\@" -5'
