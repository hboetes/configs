! for a valid list of keynames look at /usr/X11R6/lib/X11/XKeysymDB
!
! Use xev to find the matching keycode
! Use xmodmap ~/.Xmodmap to reload the keyfile without restarting X.


! Turns the right control key into the compose key for odd chars
remove           control = Control_R
keycode          105     = Multi_key
! remove Lock = Caps_Lock
! clear Lock
clear Mod4
add Mod4 = Super_R

remove mod1 = Alt_R
add mod3 = Alt_R

! I started hating this key when I touched a typewriter for the first time :)
clear Lock
keysym Caps_Lock = Shift_L
add shift = Shift_L

! Disable menu key
keycode 135 = 0x0000
